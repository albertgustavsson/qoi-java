<?xml version="1.0" encoding="utf-8" ?>
<Configuration status="error">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %-32logger{4} - %-10M - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
        <Logger name="com.albertgustavsson.qoi" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>
    </Loggers>
</Configuration>
